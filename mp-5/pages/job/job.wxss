/* pages/job/job.wxss */
.top {
  width: 100%;
  height: 60px;
  background-color: rgb(33, 90, 112);
  overflow: hidden;
}

.top .top-ipt {
  width: 300px;
  height: 25px;
  margin: 0 auto;
  margin-top: 18px;
  background-color: white;
  line-height: 25px;
  border-radius: 10px 10px;
  position: relative;
}

.top-ipt image {
  width: 22px;
  height: 22px;
  position: absolute;
  left: 20px;
  top: 1px;
}

.top-ipt text {
  position: absolute;
  top: 1px;
  left: 50px
}

.content {
  width: 100%;
  height: 120px;
}

.content-img,
.content-img2 {
  width: 70px;
  height: 80px;
  margin-top: 10px;
  margin-left: 35px;
  float: left;
}

.content-img2 {
  margin-left: 55px;
}

.content-img text,
.content-img2 text {
  margin-left: 20px;

}


.footer {
  width: 100%;
  height: 500px;
  position: relative;
  /* background-color: hotpink; */
}

.footer-img {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 10px;
  left: 80px;
}

.footer-hr {
  width: 80%;
  height: 1px;
  margin: 15px auto;
  background-color: gainsboro;

}

.footer-content {
  width: 100%;
  height: 300px;
  /* background-color: gold; */
}

.content1 {
  width: 100%;
  height: 100px;
  position: relative;
}

.left {
  width: 80px;
  height: 70px;
  margin-left: 20px;
  float: left;
}

.right {
  width: 130px;
  height: 70px;
  float: left;
  margin-left: 1px;
}

.time {
  position: absolute;
  right: 10px;
  top: 0;
  color: rgb(49, 92, 121);
  font-weight: 800;
}

.btn {
  position: absolute;
  right: 20px;
  bottom: 0;
  width: 80px;
  height: 20px;
  background-color: rgb(49, 92, 121);
  text-align: center;
  line-height: 20px;
  color: white;
  font-size: 13px;
}